{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@config/*": ["config/*"],
            "@hoc/*": ["hoc/*"],
            "@hooks/*": ["hooks/*"],
            "@icons/*": ["icons/*"],
            "@lib/*": ["lib/*"],
            "@modules/*": ["modules/*"],
            "@pages/*": ["pages/*"],
            "@stores/*": ["stores/*"],
            "@styles/*": ["styles/*"],
            "@types/*": ["types/*"],
            "@utils/*": ["utils/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
